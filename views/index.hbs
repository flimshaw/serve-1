<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Files within {{directory}}</title>

    <link rel="stylesheet" href="{{assetDir}}/styles.css">
  </head>

  <body>
    <main>
      <h1>
        <i>Index of&nbsp;</i>

        {{#each paths}}
          <a href="/{{url}}">{{name}}</a>
        {{/each}}
      </h1>

      <ul id="trackList">
        {{#each files}}
          <li{{#if size}} class="file"{{/if}}>
						<div class="inner">
            <a href="/{{relative}}" title="{{title}}" class="{{ext}}">{{base}}</a>
            {{#if size}}
						<i>{{size}}</i>
            <audio controls preload="none">
              <source src="/{{relative}}" type="audio/mpeg">
            </audio>
            {{/if}}
						</div>
          </li>
        {{/each}}
      </ul>
    </main>
    <script type="text/javascript">
      const tracks = document.getElementsByTagName('audio');

      for(let i = 0; i < tracks.length; i++) {
        const t = tracks[i];
        if(i < tracks.length - 1) {
          t.addEventListener('ended', evt => {
            tracks[i + 1].play();
          });
        }
      };

    </script>
  </body>
</html>
